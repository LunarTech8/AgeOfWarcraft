package Command_ShowAll


// --------------------
// Data code
// --------------------

let userPlayer = Player(0)
let command = "show all"
let commandShort = "sa"


// --------------------
// Functional code
// --------------------

function executeCommand()
	bj_lastCreatedFogModifier = CreateFogModifierRect(userPlayer, FOG_OF_WAR_VISIBLE, bj_mapInitialPlayableArea, true, false)
	FogModifierStart(bj_lastCreatedFogModifier)

init
	CreateTrigger()
	..addAction(function executeCommand)
	..registerPlayerChatEvent(userPlayer, command, true)
	..registerPlayerChatEvent(userPlayer, commandShort, true)